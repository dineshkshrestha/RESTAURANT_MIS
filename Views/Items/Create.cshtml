@model RESTAURANT_MIS.ITEMS
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title">Create New </h3>

                </div>
                <!-- /.card-header -->
                <form method="post" action="/Items/Create" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-group">
                            <label for="Name">Item  Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Input Item Name">
                        </div>

                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea class="form-control" id="Description" name="Description" placeholder="Enter Item description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input type="number" class="form-control" id="Price" name="Price" placeholder="input price of the item">
                        </div>

                        <input type="radio" name="itemType" value="Drinks"  id="Drinks"  class="itemTypeRadio" />
                        <label for="itemType">Drinks</label>
                        <input type="radio" name="itemType" value="Foods" id="Foods" class="itemTypeRadio" />
                        <label>Foods</label>


                        <div id="DrinksDiv">
                            <h1 class="bg-blue">Drinks Div</h1>
                        </div>

                        <div id="FoodsDiv">
                            <h1 class="bg-olive">Foods Div</h1>
                        </div>

                        <div class="form-group">
                            <label for="Status">Status</label>
                            @*<input type="text" name="Status" id="Status" class="form-control" />*@
                            <select name="Status" class="form-control" id="Status">
                                <option value="1">Available</option>
                                <option value="2">Not Available</option>
                            </select>
                            @*1=Available
                                2= Not Available*@
                        </div>

                        <div class="form-group">
                            <label for="Image">Image</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" name="file" class="custom-file-input" id="Image" accept="image/jpeg,image/gif, image/png">
                                    <label class="custom-file-label" for="Image">Choose file</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


